<template>
  <scroll-bar>
    <el-menu mode="vertical" class="menu" unique-opened :default-active="$route.path" :collapse="isCollapse">
      <sidebar-item :routes="routes"></sidebar-item>
    </el-menu>
  </scroll-bar>
</template>

<script>
  import importType from "@/router/_import";

  const asyncImport = process.env.NODE_ENV === 'development' ? importType.dev : importType.prod;
  export default {
    components: {
      SidebarItem: asyncImport('layout/components/Sidebar/SidebarItem'),
      ScrollBar: asyncImport('ScrollBar/index', 'components')
    },
    computed: {
      sidebar() {
        return this.$store.state.common.sidebar
      },
      routes() {
        return this.$router.options.routes
      },
      isCollapse() {
        return !this.sidebar.opened
      }
    }
  }
</script>
