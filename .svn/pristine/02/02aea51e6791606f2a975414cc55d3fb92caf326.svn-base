      this.query()
    },
    components: {Platform},
    methods: {
      query(page = 1) {
        Busi_spManage_getSpList(Object.assign(this.searchOptions,{curPage:page})).then(({data,dataCount}) => {
          this.tableData = data
          this.dataCount = dataCount
        })
      },
      batchOperation(type) {
        switch (type) {
          case 'freeze':
            this.freeze();
            break;
