<template>
  <scroll-bar>
    <el-menu mode="vertical" class="menu" unique-opened :default-active="$route.path" :collapse="isCollapse">
      <sidebar-item :routes="routes"></sidebar-item>
    </el-menu>
  </scroll-bar>
</template>

<script>

  const _import = require('@/router/_import_' + (process.env.NODE_ENV ==='development'?'development':'production'))
  export default {
    components: {
      SidebarItem: _import('layout/components/Sidebar/SidebarItem'),
      ScrollBar: _import('ScrollBar/index', 'components')
    },
    computed: {
      sidebar() {
        return this.$store.state.common.sidebar
      },
      routes() {
        return this.$router.options.routes
      },
      isCollapse() {
        return !this.sidebar.opened
      }
    }
  }
</script>
