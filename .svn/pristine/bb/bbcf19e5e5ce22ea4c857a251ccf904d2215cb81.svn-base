import request from '@/utils/request'

export function login(username, password) {
  return request({
    url: '/user/login',
    method: 'post',
    data: {
      username,
      password
    }
  })
}

export function getInfo(token) {
  return request({
    url: '/user/info',
    method: 'get',
    params: { token },
    loading: false
  })
}

export function logout() {
  return request({
    url: '/user/logout',
    method: 'post',
    loading: false
  })
}

export function getIndustries() {
  return request({
    url: '/common/industries',
    method: 'get',
    loading: false
  })
}

export function getPlatform() {
  return request({
    url: '/common/platform',
    method: 'get',
    loading: false
  })
}

